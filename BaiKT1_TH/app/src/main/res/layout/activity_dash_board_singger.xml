<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".DashBoardSinggerActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Singer List"
        android:gravity="center"
        android:textSize="18sp"
        android:fontFamily="@font/font" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/bg_bo"
            android:padding="1dp">
            <TextView
                android:id="@+id/btn_left"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Theo Tên"
                android:fontFamily="@font/a"
                android:textSize="16sp"
                android:background="@drawable/bg_btn_chooseleft"/>
            <TextView
                android:id="@+id/btn_right"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/gray"
                android:text="Theo quốc gia"
                android:fontFamily="@font/a"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <GridView
            android:id="@+id/lsvcasy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="1"
            android:scrollbars="none" />

    </RelativeLayout>
</LinearLayout>